<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agalloT3.Views.vUno"
             Title="vUno">
        <<Style TargetType="Entry">
            <Setter Property="Margin" Value="10" />
            <Setter Property="BackgroundColor" Value="#f5f5f5" />
            </Style>
        <Style TargetType="Picker">
            <Setter Property="Margin" Value="10" />
        </Style>
        <VerticalStackLayout>
        <Label 
            Text="REGISTRO DE DATOS"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

                <Entry x:Name="IdentificationNumber" Placeholder="Número de Identificación" />
                <Entry x:Name="FirstName" Placeholder="Nombres" />
                <Entry x:Name="LastName" Placeholder="Apellidos" />
                <DatePicker x:Name="BirthDate" />
                <Entry x:Name="Email" Placeholder="Correo Electrónico" />
                <Entry x:Name="Salary" Placeholder="Salario" Keyboard="Numeric" />

                <Button x:Name="btnGuardar"
                Text="Guardar"
                Clicked="btnGuardar_Clicked"/>

        <Button x:Name="btnRegistro"
                Text="Registrar"
                Clicked="btnRegistro_Clicked"/>
    </VerticalStackLayout>
</ContentPage>